# Use exact versions for dependencies
save-exact=true

# Ensure consistent dependency resolution
resolution-mode=highest

# Ensure consistent lockfile
lockfile-version=6.0

# Fix for "ERR_PNPM_LOCKFILE_CONFIG_MISMATCH" error
# This setting must match what's in your lockfile
auto-install-peers=true

# Ensure strict peer dependencies
strict-peer-dependencies=false
